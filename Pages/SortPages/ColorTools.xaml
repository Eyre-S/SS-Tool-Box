        <Grid ClipToBounds="True">
            <Button Style="{DynamicResource BCardEx}" Background="{DynamicResource colorCard}" Margin="0,0,407,378" VerticalAlignment="Top" HorizontalAlignment="Left" Height="115" Width="188">
